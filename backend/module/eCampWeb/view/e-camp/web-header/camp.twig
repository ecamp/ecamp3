{% extends 'e-camp/web-header/base.twig' %}

{% block header_icon %}
    <table border="0" style="width: 100%; border: 0;">
        <tr>
            <td width="1" style="padding-right: 10px;">
                <i class="zmdi zmdi-hc-fw zmdi-hc-3x zmdi-labels"></i>
            </td>
            <td style="padding-top: 3px; padding-bottom: 5px">
                <h1>{{ camp.title }}</h1>
            </td>
        </tr>
    </table>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}

    {% if camp.belongsToUser %}
        <li class="breadcrumb-item">
            <a href="{{ url('ecamp.web/user', { user: camp.owner }) }}"><i class="zmdi zmdi-account"></i> {{ camp.owner.username }}</a>
        </li>
    {% else %}
        <li class="breadcrumb-item">
            <a href="{{ url('ecamp.web/group', { group: camp.owner }) }}"><i class="zmdi zmdi-flag"></i> {{ camp.owner.name }}</a>
        </li>
    {% endif %}

    <li class="breadcrumb-item">
        <a href="{{ url('ecamp.web/camp', { camp: camp }) }}"><i class="zmdi zmdi-labels"></i> {{ camp.name }}</a>
    </li>
{% endblock %}

{% block hr %}
    <hr style="margin-top: 5px; margin-bottom: 5px;" />
{% endblock %}
