{
  "name": "@ecamp3/backend-print",
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "dev-debug": "node --inspect node_modules/.bin/nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "export": "nuxt export",
    "serve": "nuxt serve",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --fix --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lint:prettier": "prettier --write --ignore-path .gitignore **/*.{css,scss,json,md}",
    "lint:check": "npm run lint:check:eslint && npm run lint:check:prettier",
    "lint:check:eslint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lint:check:prettier": "prettier --check --ignore-path .gitignore **/*.{css,scss,json,md}",
    "test": "jest"
  },
  "dependencies": {
    "@mdi/js": "7.3.67",
    "@nuxtjs/axios": "5.13.6",
    "@nuxtjs/i18n": "7.3.1",
    "@nuxtjs/sentry": "7.5.0",
    "colorjs.io": "0.4.5",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "cssesc": "3.0.0",
    "dayjs": "1.11.10",
    "deepmerge": "4.3.1",
    "express": "4.18.2",
    "hal-json-vuex": "2.0.0-alpha.16",
    "isomorphic-dompurify": "1.9.0",
    "lodash": "4.17.21",
    "nuxt": "2.17.1",
    "puppeteer-core": "21.3.8",
    "runes": "0.4.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.22.15",
    "@babel/preset-env": "7.23.2",
    "@nuxtjs/eslint-config": "12.0.0",
    "@nuxtjs/eslint-module": "3.1.0",
    "@nuxtjs/stylelint-module": "4.2.1",
    "@nuxtjs/vuetify": "1.12.3",
    "@sentry/webpack-plugin": "2.8.0",
    "@tailwindcss/typography": "0.5.10",
    "@vue/test-utils": "1.3.6",
    "autoprefixer": "10.4.16",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "29.7.0",
    "buffer": "6.0.3",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-local-rules": "2.0.0",
    "eslint-plugin-nuxt": "4.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-vue": "9.17.0",
    "jest": "29.7.0",
    "postcss": "8.4.31",
    "prettier": "2.8.8",
    "stylelint": "15.10.3",
    "stylelint-config-standard": "34.0.0",
    "tailwindcss": "3.3.3",
    "vue": "2.7.14",
    "vue-jest": "3.0.7",
    "vue-server-renderer": "2.7.14",
    "vue-template-compiler": "2.7.14",
    "webpack": "4.47.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "extends": [
      "plugin:vue/recommended",
      "plugin:nuxt/recommended",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-console": "off",
      "prettier/prettier": "error",
      "vue/multi-word-component-names": "off",
      "local-rules/matching-translation-keys": [
        "error",
        {
          "ignoreKeysRegex": "^(global|entity|contentNode\\.[a-z][a-zA-Z]+|print\\.(global|activity|cover|picasso|program|story|toc))\\..+",
          "translationKeyPropRegex": "[a-zA-Z0-9]-i18n-key$"
        }
      ]
    },
    "plugins": [
      "eslint-plugin-local-rules"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/$1",
      "^vue$": "vue/dist/vue.common.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**",
      "!**/.nuxt/**"
    ]
  }
}
