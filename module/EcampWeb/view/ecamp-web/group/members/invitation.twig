<div class="row">
	<center ng-show="isLoading">
		<div id="fountainG" style="margin: 31.5px;">
			<div id="fountainG_1" class="fountainG">
			</div>
			<div id="fountainG_2" class="fountainG">
			</div>
			<div id="fountainG_3" class="fountainG">
			</div>
			<div id="fountainG_4" class="fountainG">
			</div>
			<div id="fountainG_5" class="fountainG">
			</div>
			<div id="fountainG_6" class="fountainG">
			</div>
			<div id="fountainG_7" class="fountainG">
			</div>
			<div id="fountainG_8" class="fountainG">
			</div>
		</div>
	</center>

	<div ng-show="numberOfPages == 0">
		<p align="center">{% block empty_text %}{% endblock %}</p>
	</div>

	<div ng-show="numberOfPages != 0" class="col-sm-12">
		<table class="table table-hover col-sm-12" ng-hide="isLoading">
			<thead>
				<tr>
					<th colspan="2">Name</th>
					<th>eMail</th>
					<th>Role</th>
					<th>
						<!-- <a  data-toggle="modal" data-backdrop="true" data-target="#remoteModalDialog"  -->
						<a href="{{ url('web/group-prefix/name/default', {'group': group, 'controller': 'Members', 'action': 'search' } ) }}"
						   class="btn btn-xs btn-success pull-right"
						>
							<i class="fa fa-plus"></i> Send invitation
						</a>
					</th>

					<!--
					<div class="row">
						<div class="col-sm-12">
							<div class="pull-right">Options</div>
						</div>
					</div>
					 -->
				</tr>
			</thead>

			<tbody>
				<tr ng-repeat="item in items">
					{% verbatim %}
					<td>
						<i class="fa fa-user"></i>
						 {{ item._embedded.user.username }}
					</td>
					<td>
						{{ item._embedded.user.displayname }}
					</td>
					<td>
						<a href="mailto:{{ item._embedded.user.email }}">
						{{ item._embedded.user.email }}
						</a>
					</td>
					<td>
						{{ item.role }}
					</td>
					{% endverbatim %}
					<td>
						<div class="pull-right">
							<a
								class="btn btn-xs btn-danger"
								href="{{ revokeInvitationBaseUrl }}{% verbatim %}{{ item._embedded.user.id }}{% endverbatim %}"
							>
								<i class="fa fa-remove"></i> Revoke
							</a>
						</div>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
