{% extends 'ecamp-web/group/group.twig' %}


{% block content2 %}

	{% embed "helper/accordion.twig" %}
		{% block panel_title %}
			Upcoming camps
		{% endblock %}
		{% block panel_content %}

			<table class="table table-striped table-hover">
				<thead>
				<tr>
					<th>Name</th>
					<th>Title</th>
					<th>Motto</th>
					<th>Optionen</th>
				</tr>
				</thead>
				<tbody>
				{% for camp in camps %}
					<tr>
						<td>
							<a href="{{ url('web/group-prefix/name+camp', { 'group': group, 'camp': camp }) }}">
								{{ camp.getName }}
							</a>
						</td>
						<td>
							<a href="{{ url('web/group-prefix/name+camp', { 'group': group, 'camp': camp }) }}">
								{{ camp.getTitle }}
							</a>
						</td>
						<td>
							<a href="{{ url('web/group-prefix/name+camp', { 'group': group, 'camp': camp }) }}">
								{{ camp.getMotto }}
							</a>
						</td>
						<td></td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		{% endblock %}
	{% endembed %}


	{% embed "helper/accordion_collapsed.twig" %}
		{% block panel_title %}
			Past camps
		{% endblock %}
		{% block panel_content %}

		{% endblock %}
	{% endembed %}

{% endblock %}
