{% extends 'ecamp-web/camp/camp.twig' %}


{% block content2 %}

	<div class="row">
		<div class="col-xs-12">
			<h3>Day {% if day %} - {{ day.start | date("d.m.Y") }} {% endif %}</h3>
		</div>
	</div>

	<div class="row">

		<div class="col-sm-4 col-md-3">
			<div class="panel-group" id="periodsAccordion">

			  {% for period in periods %}

				  <div class="panel panel-default">
				    {% if day.period == period %}
					    <a class="accordion-toggle" data-toggle="collapse" data-parent="#periodsAccordion" href="#{{ period.id }}">
						    <div class="panel-heading">
						      <h4 class="panel-title">
						          <i class="icon-accordion"></i>
						          {{ period.description }}
						      </h4>
						    </div>
					    </a>
					<div id="{{ period.id }}" class="panel-collapse collapse in">
				    {% else %}
				    	<a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#periodsAccordion" href="#{{ period.id }}">
						    <div class="panel-heading">
						      <h4 class="panel-title">
						          <i class="icon-accordion"></i>
						          {{ period.description }}
						      </h4>
						    </div>
					    </a>
				    <div id="{{ period.id }}" class="panel-collapse collapse">
				    {% endif %}
				      <div class="panel-body" style="padding: 10px">
				        <ul class="nav nav-pills nav-stacked">
						{% for day_ in period.days %}
							{% if day == day_ %}
								<li class="active">
							{% else %}
								<li>
							{% endif %}
									<a 	style="padding-top: 5px; padding-bottom: 5px;"
										href="{{
										url('web/camp/default',
											{ 'camp': camp, 'controller': 'day', 'action': 'index' },
											{ 'query': { 'dayId': day_.id } })
										}}"
									>
										<center>
											{{ day_.getStart() | date("D :: d.m.Y") }}
										</center>
									</a>
								</li>
						{% endfor %}
						</ul>
				      </div>
				    </div>
				  </div>

			  {% endfor %}

			</div>
		</div>

		<div class="col-sm-8 col-md-9">

			{% embed "helper/accordion.twig" %}
				{% block panel_title %}
					Jobs
				{% endblock %}
				{% block panel_content %}


				{% endblock %}
			{% endembed %}

			{% embed "helper/accordion.twig" %}
				{% block panel_title %}
					Events
				{% endblock %}
				{% block panel_content %}

					<div class="col-sm-12">
						<table class="table table-striped table-hover" style="width: 100%">
							<thead>
								<tr>
									<th>Time</th>
									<th>Eventname</th>
									<th>Duration</th>
									<th>Progress</th>
									<th>Options</th>
								</tr>
							</thead>
							<tbody>
								{% for eventInstance in eventInstances %}
									<tr>
										<td>{{ eventInstance.getStart() | date('H:i') }}</td>
										<td>{{ eventInstance.getEvent().getTitle() }}</td>
										<td>{{ eventInstance.getDuration() | date('%Hh %Imin') }}</td>
										<td></td>
										<td>
											<a href="#">Edit</a> |
											<a href="#">Delete</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

				{% endblock %}
			{% endembed %}

			{% embed "helper/accordion.twig" %}
				{% block panel_title %}
					Story
				{% endblock %}
				{% block panel_content %}
					<textarea rows="" cols=""></textarea>

				{% endblock %}
			{% endembed %}

		</div>
	</div>
{% endblock %}
