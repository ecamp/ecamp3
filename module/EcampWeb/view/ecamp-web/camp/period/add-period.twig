<!-- Modal / Add Period -->
<div class="modal-header">
    <button type="button" class="close" ng-click="$close()">&times;</button>
    <h4 class="modal-title"><i class="fa fa-plus"></i> Add Period</h4>
</div>
<div class="modal-body">
    <div class="container-fluid">
    <div class="row">
        <div class="col-xs-12" style="margin-bottom: -15px">
            {{ form(form) }}
        </div>
    </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" ng-click="$close()">Cancel</button>
    <button type="submit" form="period-create" class="btn btn-primary">Add Period</button>
</div>
