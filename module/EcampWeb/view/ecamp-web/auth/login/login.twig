{% extends 'layout/layout.default.twig' %}

{% block ng_app %}ecamp-login{% endblock %}

{% block link %}
    {{ parent() }}

    <style type="text/css">
        .nav-tabs li a {
            background-color: #f5f5f5;
        }

        input[type=radio],
        input[type=checkbox] {
            display: none;
        }

        input[type=checkbox] + label {
            margin-left: 10px;
            width: 20px;
            font-size: 17px;
            font-family: "FontAwesome";
            cursor: pointer;
        }
        input[type=checkbox] + label + label {
            cursor: pointer;
        }

        input[type=checkbox]:checked + label:before {
            content: "\f046";
        }

        input[type=checkbox] + label:before {
            content: "\f096";
        }
    </style>

{% endblock %}

{% block script %}
    {{ parent() }}

    <script type="text/javascript" src="{{ basePath('/web-assets/js/modal-form.js') }}"></script>

    <script type="text/javascript">
        (function(){
            angular.module('ecamp-login', [
                'ecamp-modal-form'
            ]);
        })();
    </script>
{% endblock %}


{% block layout_header %}
{% endblock %}

{% block layout_body %}

    <section class="container" style="margin-top: 10%">
        <div class="row">
            <div class="col-sm-5 col-sm-push-5 col-md-4 col-md-push-5">

                <div class="row white" style="padding-bottom: 15px">
                    {{ form().openTag(login) | raw }}
                        <div class="col-sm-12">
                            <h3>eCamp</h3>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <div class="col-xs-12">
                                    {{ formElement(login.get('login')) | raw }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    {{ formElement(login.get('password')) | raw }}
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-7">
                            <div class="btn-group">
                                <input name="rememberme" id="rememberme" type="checkbox">
                                <label for="rememberme"> </label>
                                <label for="rememberme">Remember me</label>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <button type="submit" class="btn btn-success col-xs-12">
                                Login
                            </button>
                        </div>

                        {{ formElement(login.get('redirect')) }}
                    {{ form().closeTag() | raw }}

                    <span class="clearfix"></span>
                    <hr />

                    <div style="text-align: center">
                        <button
                            async-modal
                            type="button"
                            class="btn-link"
                            href="{{ url('web/default', { 'controller':'register' } ) }}"
                        >Register</button>

                        <button
                            async-modal
                            type="button"
                            class="btn-link"
                            href="{{ url('web/default', { 'controller': 'register', 'action': 'forgot-password' }) }}"
                        >Forgot password</button>
                        &nbsp;&nbsp;|&nbsp;&nbsp;
                        <button
                            async-modal
                            class="btn-link"
                            href="{{ url('web/default', { 'controller': 'index', 'action': 'about'} ) }}"
                        >About</button>
                    </div>
                </div>

            </div>
        </div>
    </section>

{% endblock %}
