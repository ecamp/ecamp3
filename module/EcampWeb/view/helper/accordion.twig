
{% set gid = random() %}
{% set panelId = 'panel-' ~ gid %}
{% set collapseId = 'collapse-' ~ gid %}

<div class="panel-group" id="{{ panelId }}">
	<div class="panel panel-default">
				<a class="accordion-toggle" data-toggle="collapse" data-parent="#{{ panelId }}" href="#{{ collapseId }}">
		<div class="panel-heading">
			<h4 class="panel-title">
				<i class="icon-accordion"></i>
				{% block panel_title %}{% endblock %}
			</h4>
		</div>
				</a>
		<div id="{{ collapseId }}" class="panel-collapse collapse in">
			<div class="panel-body">
				{% block panel_content %}{% endblock %}
			</div>
		</div>
	</div>
</div>
