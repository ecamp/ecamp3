<div tal:condition="pageCount"><!-- First page link --><tal:block condition="exists: previous">  <a tal:attributes = "href php: this.url(array('page' => first))">    First  </a> |</tal:block><tal:block condition="not: exists: previous">  <span class="disabled">First</span> |</tal:block><!-- Previous page link --><tal:block condition="exists: previous">   <a tal:attributes = "href php: this.url(array('page' => previous))">    &lt; Previous  </a> |</tal:block><tal:block condition="not: exists: previous">  <span class="disabled">&lt; Previous</span> |</tal:block><!-- Numbered page links --><tal:block repeat="page pagesInRange">	<a tal:condition="php: page != current" tal:attributes="href php: this.url(array('page' => page))" tal:content="page" />	<span tal:condition="php: page == current" tal:content="page" /></tal:block>  |<!-- Next page link --><tal:block condition="exists: next">   <a tal:attributes = "href php: this.url(array('page' => next))">    Next &gt;  </a> |</tal:block><tal:block condition="not: exists: next">  <span class="disabled">Next &gt;</span> |</tal:block><!-- Last page link --><tal:block condition="exists: next">   <a tal:attributes = "href php: this.url(array('page' => last))">    Last  </a></tal:block><tal:block condition="not: exists: next">  <span class="disabled">Last</span></tal:block>  </div>