<span metal:use-macro="camp/header.phtml/header" />

<div class="span-24 last">
    <h2>All Events</h2>

	<p>
		<a tal:attributes="href helper:thisurl(array('action' => 'create', 'group' => group.getId(), 'camp' => camp.getId()))">New Random Event</a>
	</p>

	<div class="span-12">
		<table>
			<tr tal:repeat="event camp/getEvents">
				<td><a tal:attributes="href helper:thisurl(array('action' => 'show', 'group' => group.getId(), 'camp' => camp.getId(), 'id' => event.getId() ), 'group+camp+id')" tal:content="event/getTitle" /></td>
				<td>
					<a class="button negative" tal:attributes="href helper:thisurl(array('action' => 'delete', 'group' => group.getId(), 'camp' => camp.getId(), 'id' => event.getId() ), 'group+camp+id')" i18n:translate="">
						delete
					</a>
				</td>
			</tr>
		</table>
	</div>
</div>