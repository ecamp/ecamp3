{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vite --host 0.0.0.0",
    "preview": "vite preview --host 0.0.0.0 --port 3000",
    "build": "vite build",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "vue-cli-service lint",
    "lint:prettier": "prettier --write --ignore-path .prettierignore **/*.{css,scss,json,md}",
    "lint:check": "npm run lint:check:eslint && npm run lint:check:prettier",
    "lint:check:eslint": "vue-cli-service lint --no-fix",
    "lint:check:prettier": "prettier --check --ignore-path .prettierignore **/*.{css,scss,json,md}",
    "start": "vite --host 0.0.0.0",
    "dev": "vite --host 0.0.0.0",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
    "test:unit": "vue-cli-service test:unit",
    "test:unit:debug": "node --inspect-brk=0.0.0.0:9229 ./node_modules/@vue/cli-service/bin/vue-cli-service.js test:unit --no-cache --runInBand",
    "test:unit:watch": "vue-cli-service test:unit --watch",
    "postinstall": "./scripts/install-twemoji.sh"
  },
  "dependencies": {
    "@intlify/core": "9.2.2",
    "@mdi/font": "7.2.96",
    "@react-pdf/renderer": "3.1.12",
    "@sentry/browser": "7.61.1",
    "@sentry/vue": "7.61.1",
    "@tiptap/extension-bold": "2.0.4",
    "@tiptap/extension-bubble-menu": "2.0.4",
    "@tiptap/extension-bullet-list": "2.0.4",
    "@tiptap/extension-document": "2.0.4",
    "@tiptap/extension-hard-break": "2.0.4",
    "@tiptap/extension-heading": "2.0.4",
    "@tiptap/extension-history": "2.0.4",
    "@tiptap/extension-italic": "2.0.4",
    "@tiptap/extension-list-item": "2.0.4",
    "@tiptap/extension-ordered-list": "2.0.4",
    "@tiptap/extension-paragraph": "2.0.4",
    "@tiptap/extension-placeholder": "2.0.4",
    "@tiptap/extension-strike": "2.0.4",
    "@tiptap/extension-text": "2.0.4",
    "@tiptap/extension-underline": "2.0.4",
    "@tiptap/vue-2": "2.0.4",
    "@zxcvbn-ts/core": "3.0.3",
    "@zxcvbn-ts/language-common": "3.0.3",
    "@zxcvbn-ts/language-de": "3.0.1",
    "@zxcvbn-ts/language-en": "3.0.1",
    "@zxcvbn-ts/language-fr": "3.0.1",
    "@zxcvbn-ts/language-it": "3.0.1",
    "assert": "2.0.0",
    "axios": "1.4.0",
    "colorjs.io": "0.4.5",
    "comlink": "4.4.1",
    "dayjs": "1.11.9",
    "deepmerge": "4.3.1",
    "file-saver": "2.0.5",
    "hal-json-vuex": "2.0.0-alpha.16",
    "html-to-react": "1.6.0",
    "inter-ui": "3.19.3",
    "js-cookie": "3.0.5",
    "lodash": "4.17.21",
    "raf": "3.4.1",
    "react": "18.2.0",
    "runes": "0.4.3",
    "slugify": "1.6.6",
    "url-template": "3.1.0",
    "util": "0.12.5",
    "uuid": "9.0.0",
    "v-resize-observer": "2.0.2",
    "vee-validate": "3.4.15",
    "vue": "2.7.14",
    "vue-axios": "3.5.2",
    "vue-i18n": "8.28.2",
    "vue-recaptcha-v3": "1.9.0",
    "vue-router": "3.6.5",
    "vue-toastification": "1.7.14",
    "vuedraggable": "2.24.3",
    "vuetify": "2.7.0",
    "vuex": "3.6.2",
    "xlsx": "0.18.5"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.22.10",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/user-event": "14.4.3",
    "@testing-library/vue": "5.9.0",
    "@vitejs/plugin-vue2": "2.2.0",
    "@vue/cli-plugin-babel": "5.0.8",
    "@vue/cli-plugin-eslint": "5.0.8",
    "@vue/cli-plugin-unit-jest": "5.0.8",
    "@vue/cli-service": "5.0.8",
    "@vue/eslint-config-prettier": "8.0.0",
    "@vue/test-utils": "1.3.6",
    "@vue/vue2-jest": "27.0.0",
    "babel-plugin-require-context-hook": "1.0.0",
    "coveralls": "3.1.1",
    "eslint": "8.46.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-local-rules": "^1.3.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-vue": "9.16.1",
    "flush-promises": "1.0.2",
    "jest-canvas-mock": "2.5.2",
    "jest-serializer-vue-tjw": "3.20.0",
    "lint-staged": "13.2.3",
    "prettier": "3.0.1",
    "sass": "1.32.13",
    "unplugin-vue-components": "0.25.1",
    "vite": "4.4.9",
    "vite-plugin-comlink": "3.0.5",
    "vite-plugin-vue2-svg": "0.4.0",
    "vue-cli-plugin-vuetify": "2.5.8",
    "vue-template-compiler": "2.7.14"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended",
      "plugin:prettier/recommended",
      "@vue/eslint-config-prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "vue/component-tags-order": [
        "error",
        {
          "order": [
            "template",
            "script",
            "style"
          ]
        }
      ],
      "vue/multi-word-component-names": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_$"
        }
      ],
      "local-rules/matching-translation-keys": [
        "error",
        {
          "ignoreKeysRegex": "^(global|entity|contentNode\\.[a-z][a-zA-Z]+|print\\.(global|activity|cover|picasso|program|story|toc))\\..+",
          "translationKeyPropRegex": "[a-zA-Z0-9]-i18n-key$"
        }
      ]
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "plugins": [
      "eslint-plugin-local-rules"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/.jest/register-context.js",
      "<rootDir>/.jest/environment.js",
      "jest-canvas-mock"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/.jest/jest-setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "@vue/vue2-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(vuetify|vee-validate|axios))"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "modulePaths": [
      "<rootDir>/node_modules/"
    ],
    "roots": [
      "<rootDir>",
      "<<rootDir>/../../common"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue-tjw"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)",
      "**/__tests__/*.spec.(js|jsx|ts|tsx)",
      "**/tests/infrastructure/**/*.spec.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "coverageDirectory": "data/coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "common/**/*.js",
      "!src/components/print/print-react/generatePdf.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
