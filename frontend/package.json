{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "start": "vue-cli-service serve",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "test:e2e:ci": "vue-cli-service test:e2e --headless",
    "test:unit:debug": "node --inspect-brk=0.0.0.0:9229 ./node_modules/@vue/cli-service/bin/vue-cli-service.js test:unit --no-cache --runInBand",
    "test:unit:watch": "vue-cli-service test:unit --watch"
  },
  "dependencies": {
    "@mdi/font": "5.9.55",
    "@sentry/vue": "6.0.2",
    "axios": "0.21.1",
    "deepmerge": "4.2.2",
    "hal-json-vuex": "1.2.1",
    "inter-ui": "3.15.0",
    "lodash": "4.17.20",
    "moment-locales-webpack-plugin": "1.2.0",
    "slugify": "1.4.6",
    "tiptap": "1.32.0",
    "tiptap-extensions": "1.35.0",
    "url-template": "2.0.8",
    "vee-validate": "3.4.5",
    "vue": "2.6.12",
    "vue-axios": "3.2.3",
    "vue-i18n": "8.22.4",
    "vue-moment": "4.1.0",
    "vue-router": "3.5.1",
    "vuedraggable": "2.24.3",
    "vuetify": "2.4.3",
    "vuex": "3.6.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "4.5.11",
    "@vue/cli-plugin-e2e-cypress": "4.5.11",
    "@vue/cli-plugin-eslint": "4.5.11",
    "@vue/cli-plugin-unit-jest": "4.5.11",
    "@vue/cli-service": "4.5.11",
    "@vue/eslint-config-standard": "6.0.0",
    "@vue/test-utils": "1.1.2",
    "babel-eslint": "10.1.0",
    "babel-plugin-require-context-hook": "1.0.0",
    "coveralls": "3.1.0",
    "eslint": "7.18.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-vue": "7.5.0",
    "flush-promises": "1.0.2",
    "jest-canvas-mock": "2.3.0",
    "jest-serializer-vue-tjw": "3.15.0",
    "lint-staged": "10.5.3",
    "sass": "1.32.5",
    "sass-loader": "10.1.1",
    "vue-cli-plugin-i18n": "1.0.1",
    "vue-cli-plugin-vuetify": "2.1.0",
    "vue-svg-loader": "0.16.0",
    "vue-template-compiler": "2.6.12",
    "vuetify-loader": "1.7.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:vue/recommended",
      "@vue/standard"
    ],
    "rules": {
      "vue/component-tags-order": [
        "error",
        {
          "order": [
            "template",
            "script",
            "style"
          ]
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "never"
        }
      ],
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 3,
          "multiline": {
            "max": 2,
            "allowFirstLine": true
          }
        }
      ],
      "vue/singleline-html-element-content-newline": [
        "error",
        {
          "ignoreWhenEmpty": true,
          "ignores": [
            "v-chip",
            "v-icon",
            "v-btn",
            "v-alert",
            "span",
            "router-link",
            "h1",
            "pre"
          ]
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>/.jest/register-context.js",
      "<rootDir>/.jest/environment.js",
      "jest-canvas-mock"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(vuetify|vee-validate))"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue-tjw"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)",
      "**/__tests__/*.spec.(js|jsx|ts|tsx)",
      "**/tests/infrastructure/**/*.spec.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "coverageDirectory": "data/coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,vue}"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
